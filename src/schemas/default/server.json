{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Server",
  "properties": {
      "security": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "type": "object",
          "properties": {
                "serverPublicKey": {
                    "type": "string",
                    "title": "Server public key"
                },
              "securityMode": {
                  "default": "NO_SEC",
                  "type": "string",
                  "title": "Security mode",
                  "oneOf": [
                    {
                      "title": "NO_SEC",
                      "const": "NO_SEC"
                    },
                    {
                      "title": "PSK",
                      "const": "PSK"
                    }
                  ]
              },
                "lwm2mShortServerId": {
                    "type": "number",
                    "title": "Short Server ID"
                },
                "registrationLifetime": {
                    "type": "number",
                    "title": "Registration lifetime"
                },
                "defaultMinimumPeriod": {
                    "type": "number",
                    "title": "Default Minimum Period"
                },
                "defaultMaximumPeriod": {
                    "type": "number",
                    "title": "Default Maximum Period"
                },
                "disableTimeout": {
                    "title": "Disable timeout",
                    "type": "boolean",
                            "default": false
                    },
                "notificationIfDisabled": {
                    "title": "Notification Storing When Disabled or Offline",
                    "type": "boolean",
                            "default": false
                },
                "bindingMode": {
                  "type": "string",
                  "title": "Binding mode",
                  "oneOf": [
                    {
                      "title": "UDP",
                      "const": "U"
                    },
                    {
                      "title": "UDP with queue mode",
                      "const": "UQ"
                    }
                  ]
                }
          },
          "dependencies": {
              "securityMode": {
                  "oneOf": [
                      {
                          "type": "object",
                          "properties": {
                              "securityMode": {
                                  "const": "NO_SEC",
                                  "type": "string"
                              }
                          }
                      },
                      {
                          "type": "object",
                          "properties": {
                              "securityMode": {
                                  "const": "PSK",
                                  "type": "string"
                              },
                              "publicKeyOrId": {
                                  "type": "string",
                                  "title": "PSK ID"
                              },
                              "secretKey": {
                                  "pattern": "^([a-fA-F0-9]{2})+$",
                                  "examples": [
                                      "0123456789abcdef"
                                  ],
                                  "type": "string",
                                  "title": "Pre-shared key"
                              }
                          },
                          "required": [
                              "publicKeyOrId",
                              "secretKey"
                          ]
                      }
                  ]
              }
          }
      }
  },
  "required": [
      "security"
  ]
}