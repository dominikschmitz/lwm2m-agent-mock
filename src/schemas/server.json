{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Server",
    "properties": {
      "icon": {
        "type": "string",
        "const": "server"
      },
      "security": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "title": "Security",
        "properties": {
          "securityMode": {
            "default": "NO_SEC",
            "type": "string",
            "title": "Mode",
            "oneOf": [
              {
                "title": "NO_SEC",
                "const": "NO_SEC"
              },
              {
                "title": "PSK",
                "const": "PSK"
              }
            ]
          }
        },
        "dependencies": {
          "securityMode": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "securityMode": {
                    "const": "NO_SEC",
                    "type": "string"
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "securityMode": {
                    "const": "PSK",
                    "type": "string"
                  },
                  "publicKeyOrId": {
                    "type": "string",
                    "title": "PSK ID"
                  },
                  "secretKey": {
                    "pattern": "^([a-fA-F0-9]{2})+$",
                    "examples": [
                      "0123456789abcdef"
                    ],
                    "type": "string",
                    "title": "Pre-shared key"
                  }
                },
                "required": [
                  "publicKeyOrId",
                  "secretKey"
                ]
              }
            ]
          }
        }
      },
      "settings": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "title": "Settings",
        "properties": {
          "lwm2mShortServerId": {
            "title": "Short Server ID",
            "type": "integer",
            "examples": ["0"],
            "default": 0,
            "minimum": 0
          },
          "registrationLifetime": {
            "title": "Registration lifetime",
            "type": "integer",
            "description": "in seconds",
            "examples": ["600"],
            "minimum": 0
          },
          "defaultMinimumPeriod": {
            "title": "Default Minimum Period",
            "type": "integer",
            "description": "in seconds",
            "examples": ["10"],
            "minimum": 0
          },
          "defaultMaximumPeriod": {
            "title": "Default Maximum Period",
            "type": "integer",
            "description": "in seconds",
            "examples": ["10"],
            "minimum": 0
          },
          "bindingMode": {
            "default": "U",
            "type": "string",
            "title": "Binding mode",
            "oneOf": [
              {
                "title": "UDP",
                "const": "U"
              },
              {
                "title": "UDP with queue mode",
                "const": "UQ"
              }
            ]
          },
          "disableTimeout": {
            "title": "Disable timeout",
            "type": "boolean",
            "default": false
          },
          "notificationIfDisabled": {
            "title": "Notification Storing",
            "description": "When Disabled or Offline",
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "required": [
      "security"
    ]
  }